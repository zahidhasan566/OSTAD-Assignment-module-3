pipeline {
    agent any

    environment {
        REMOTE_USER = 'ubuntu'
        REMOTE_HOST = '13.239.134.104'
        PROJECT_DIR = '/home/ubuntu/OSTAD-Assignment-module-3'
        NODE_PATH = '/home/ubuntu/.nvm/versions/node/v18.17.1/bin'
    }

    stages {
        stage('Remote Install') {
            steps {
                sshagent(['remote-ssh-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${REMOTE_HOST} '
                            cd ${PROJECT_DIR} && ${NODE_PATH}/npm install
                        '
                    """
                }
            }
        }

        stage('Remote Test') {
            steps {
                sshagent(['remote-ssh-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${REMOTE_HOST} '
                            cd ${PROJECT_DIR} && ${NODE_PATH}/npm run check
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
